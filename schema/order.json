{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://schema.croct.io/web/order.json",
  "type": "object",
  "properties": {
    "cartId": {
      "type": "string"
    },
    "orderId": {
      "type": "string"
    },
    "currency": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "https://schema.croct.io/web/order-item.json"
      }
    },
    "subtotal": {
      "type": "number"
    },
    "shippingPrice": {
      "type": "number"
    },
    "taxes": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "costs": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "discount": {
      "type": "number"
    },
    "total": {
      "type": "number"
    },
    "coupon": {
      "type": "string"
    },
    "paymentMethod": {
      "type": "string"
    },
    "installments": {
      "type": "integer"
    },
    "status": {
      "type": "string",
      "enum": [
        "placed",
        "paid",
        "complete"
      ]
    }
  },
  "required": [
    "orderId",
    "currency",
    "items",
    "total"
  ]
}