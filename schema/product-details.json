{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://schema.croct.io/sdk/web/product-details.json",
  "type": "object",
  "properties": {
    "productId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "productSku": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "brand": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "variant": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "displayPrice": {
      "type": "number",
      "minimum": 0
    },
    "originalPrice": {
      "type": "number",
      "minimum": 0
    },
    "url": {
      "type": "string",
      "format": "url"
    },
    "imageUrl": {
      "type": "string",
      "format": "url"
    }
  },
  "required": [
    "name",
    "displayPrice"
  ]
}