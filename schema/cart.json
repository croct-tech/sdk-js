{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://schema.croct.io/sdk/web/cart.json",
  "type": "object",
  "properties": {
    "cartId": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "https://schema.croct.io/sdk/web/cart-item.json"
      },
      "minItems": 1
    },
    "subtotal": {
      "type": "number",
      "minimum": 0
    },
    "shippingPrice": {
      "type": "number",
      "minimum": 0
    },
    "taxes": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      },
      "minProperties": 1
    },
    "costs": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      },
      "minProperties": 1
    },
    "discount": {
      "type": "number",
      "minimum": 0
    },
    "total": {
      "type": "number",
      "minimum": 0
    },
    "coupon": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    },
    "lastUpdateTime": {
      "type": "integer"
    }
  },
  "required": [
    "currency",
    "items",
    "total",
    "lastUpdateTime"
  ]
}