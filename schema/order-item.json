{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://schema.croct.io/sdk/web/order-item.json",
  "type": "object",
  "properties": {
    "index": {
      "type": "integer",
      "minimum": 0
    },
    "product": {
      "$ref": "https://schema.croct.io/sdk/web/product-details.json"
    },
    "quantity": {
      "type": "integer",
      "minimum": 1
    },
    "total": {
      "type": "number",
      "minimum": 0
    },
    "discount": {
      "type": "number",
      "minimum": 0
    },
    "coupon": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50
    }
  },
  "required": [
    "product",
    "quantity",
    "total"
  ]
}