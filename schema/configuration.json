{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://schema.croct.io/sdk/web/configuration.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "apiKey": {
      "type": "string",
      "format": "uuid"
    },
    "storageNamespace": {
      "type": "string",
      "pattern": "^[a-zA-Z_][a-zA-Z0-9_]*$"
    },
    "tokenScope": {
      "type": "string",
      "enum": [
        "global",
        "contextual",
        "isolated"
      ]
    },
    "debug": {
      "type": "boolean"
    },
    "track": {
      "type": "boolean"
    }
  },
  "required": [
    "apiKey"
  ]
}